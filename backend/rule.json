        {
            "key": "parent_id",
            "name": "父节点",
            "trans": {
                "sql": "SELECT t.id, (SELECT GROUP_CONCAT(p.name ORDER BY p.`level` SEPARATOR ' / ') FROM navtree p WHERE FIND_IN_SET(p.id, REPLACE(CONCAT(t.key_path, '_', t.id), '_', ',')) > 0) AS val FROM navtree t",
                "key": "id",
                "val": "val"
            }
        },
